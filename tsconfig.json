{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "noLib": false,
    "lib": ["es6", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
